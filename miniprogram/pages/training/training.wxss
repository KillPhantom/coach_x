/* 导入公共样式 */
@import "../../styles/app.wxss";

/* 训练计划页面特定样式 */
.content-wrapper {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 80px;
}


.ai-insight {
  margin: 12px;
  padding: 16px;
  padding-bottom: 30px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  width: calc(100% - 24px);
  position: relative;
}

.ai-insight-container {
  display: flex;
  align-items: flex-start;
  width: 100%;
}

.ai-insight-icon {
  padding: 8px;
  background: #E3F2FD;
  border-radius: 50%;
  margin-right: 12px;
  color: #2196F3;
  font-size: 16px;
  flex-shrink: 0;
}

.ai-insight-content {
  flex: 1;
  min-width: 0; /* 防止flex子项溢出 */
  overflow: hidden;
}

.ai-insight-title {
  font-weight: bold;
  margin-bottom: 4px;
}

.ai-insight-text {
  font-size: 14px;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.search-filter {
  margin: 0 12px 16px;
  display: flex;
  align-items: center;
  width: calc(100% - 24px);
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 8px;
  min-width: 0; /* 防止flex子项溢出 */
}

.filter-select {
  margin-left: 8px;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  min-width: 90px;
  text-align: center;
  flex-shrink: 0;
}

.card {
  margin: 8px 12px 12px;
  padding: 16px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  width: calc(100% - 24px);
  box-sizing: border-box;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  width: 100%;
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  flex: 1;
  min-width: 0;
}

.ai-create-button {
  background: none;
  border: none;
  color: #07C160;
  font-size: 12px;
  display: flex;
  align-items: center;
  padding: 4px 8px;
  line-height: 1.2;
  flex-shrink: 0;
}

.template-scroll {
  display: flex;
  white-space: nowrap;
  padding: 8px 0;
  overflow-x: auto;
  width: 100%;
  box-sizing: border-box;
}

.template-card {
  display: inline-block;
  min-width: 160px;
  margin-right: 12px;
  padding: 12px;
  background: #f2f2f2;
  border-radius: 8px;
  border-left: 3px solid transparent;
  box-sizing: border-box;
}

.template-card:last-child {
  margin-right: 0;
}

.template-card.optimized {
  border-left-color: #2196F3;
}

.template-title {
  font-weight: bold;
}

.template-frequency {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}

.template-usage {
  font-size: 12px;
  margin-top: 4px;
}

.template-status {
  font-size: 11px;
  margin-top: 4px;
}

.optimized-status {
  color: #2196F3;
}

.can-optimize-status {
  color: #F44336;
}

.section-header {
  margin: 16px 12px 8px 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 24px);
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  flex: 1;
  text-align: left;
}

.plan-list-card {
  margin: 0 12px 12px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  padding: 0;
  overflow: hidden;
  width: calc(100% - 24px);
  box-sizing: border-box;
}

.plan-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border-bottom: 1px solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.plan-item:last-child {
  border-bottom: none;
}

.plan-student-info {
  display: flex;
  align-items: center;
  width: 45%; /* 分配45%的宽度给学员信息 */
  min-width: 0;
}

.avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: #e8f5e9;
  color: #4caf50;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 8px;
  flex-shrink: 0;
}

.student-info-text {
  min-width: 0;
  overflow: hidden;
}

.student-name {
  font-weight: bold;
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.student-tags {
  font-size: 12px;
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
}

.tag {
  padding: 2px 6px;
  border-radius: 10px;
  font-size: 10px;
  white-space: nowrap;
}

.plan-name {
  width: 45%; /* 分配45%的宽度给计划名称 */
  text-align: left;
  font-size: 14px;
  padding: 0 8px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.plan-actions {
  display: flex;
  gap: 8px;
  width: 10%; /* 分配10%的宽度给操作按钮 */
  justify-content: flex-end;
  flex-shrink: 0;
}

.plan-action-btn {
  background: none;
  border: none;
  color: #07C160;
  font-size: 14px;
  padding: 0;
  line-height: 1.2;
  min-width: 40px;
}

/* 修改批量操作按钮和创建新计划按钮的样式 */
.batch-action-container,
.add-plan-container {
  margin: 16px 12px;
  width: calc(100% - 24px); /* 与其他卡片保持一致的宽度 */
  box-sizing: border-box;
}

.batch-action-btn,
.add-plan-btn {
  width: 100%;
  background-color: #07C160;
  color: white;
  border: none;
  padding: 10px 0;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  box-sizing: border-box;
}

.button-icon,
.add-icon {
  margin-right: 8px;
  font-size: 16px;
}

/* 标签样式 */
.tag-bulking {
  background: #e6f7ff;
  color: #1890ff;
}

.tag-cutting {
  background: #fff7e6;
  color: #fa8c16;
}

.tag-maintenance {
  background: #f6ffed;
  color: #52c41a;
}

.ai-insight-refresh {
  position: absolute;
  bottom: 8px;
  left: 60px;
}


.refresh-btn {
  background: none;
  border: none;
  color: #07C160;
  font-size: 12px;
  display: flex;
  align-items: center;
  padding: 4px 8px;
  line-height: 1.2;
}

.refresh-icon {
  margin-right: 4px;
}

/* 添加加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
  width: 100%;
}

.loading-text {
  color: #999;
  font-size: 14px;
} 