/* 页面容器 */
.container {
  padding: 0 16px 32px;
  box-sizing: border-box;
  width: 100%;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  height: 44px;
  background-color: #FFFFFF;
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  box-sizing: border-box;
  padding: 0 16px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.back-button {
  padding: 8px;
  margin-left: -8px;
}

.back-icon {
  font-size: 18px;
  font-weight: 600;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  margin-right: 24px;
}

/* 用户卡片 */
.user-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-top: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.user-info-header {
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 16px;
}

.avatar {
  width: 64px;
  height: 64px;
  border-radius: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  font-weight: 500;
  color: #FFFFFF;
  background-color: #007AFF;
}

.user-basic-info {
  flex: 1;
}

.user-name-container {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
}

.user-name {
  font-size: 20px;
  font-weight: 600;
  margin-right: 8px;
}

.user-role {
  font-size: 14px;
  color: #FFFFFF;
  background-color: #007AFF;
  padding: 2px 8px;
  border-radius: 4px;
}

.user-details {
  font-size: 14px;
  color: #666666;
  margin-bottom: 4px;
}

.join-date {
  font-size: 12px;
  color: #86868B;
}

/* 数据卡片 */
.data-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-top: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.card-title {
  font-size: 18px;
  font-weight: 600;
}

.weight-change {
  font-size: 14px;
  color: #34C759;
}

.chart-container {
  width: 100%;
  height: 200px;
}

.weight-chart {
  width: 100%;
  height: 100%;
}

/* 编辑区域 */
.profile-edit-section {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-top: 12px;
}

.edit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.edit-label {
  font-size: 16px;
  color: #1C1C1E;
  width: 80px;
}

.edit-value-container {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.edit-input {
  text-align: right;
  height: 36px;
  max-width: 120px;
  padding: 0 8px;
  border-bottom: 1px solid #E5E5EA;
}

.unit {
  margin-left: 4px;
  color: #86868B;
  width: 30px;
}

.edit-value {
  font-size: 16px;
  color: #666666;
}

.picker-value {
  font-size: 16px;
  color: #007AFF;
  min-width: 80px;
  text-align: right;
}

/* 统计数据 */
.stats-container {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 24px;
  font-weight: 600;
  color: #007AFF;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 14px;
  color: #86868B;
}

/* 操作区域 */
.action-area {
  margin-top: 32px;
  width: 100%;
}

.action-button {
  width: 100%;
  height: 48px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  line-height: 48px;
  margin-bottom: 16px;
}

.save-button {
  background-color: #007AFF;
  color: #FFFFFF;
}

.logout-button {
  background-color: #FF3B30;
  color: #FFFFFF;
} 