/* 导入公共样式 */
@import "../../styles/app.wxss";

/* 学员页面特定样式 */
.search-filter {
  margin-top:32px;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  width: 90%;
}

.search-input {
  flex: 1;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 8px;
}

.filter-select {
  margin-left: 8px;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  min-width: 90px;
  text-align: center;
}

.ai-description {
  font-size: 14px;
  margin-bottom: 12px;
}

.stat-cards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
  margin-top: 20px;
  padding: 0 12px;
}

.stat-card {
  flex: 1;
  background: white;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  margin: 0 4px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  cursor: pointer;
}

.stat-card:hover,
.stat-card:active {
  background-color: #f8f8f8;
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* 添加选中状态样式 */
.stat-card.selected {
  border: 2px solid #07C160;
  background-color: #f0fff0;
}

.stat-card:first-child {
  margin-left: 0;
}

.stat-card:last-child {
  margin-right: 0;
}

.student-action {
  align-items: flex-end;
  margin-left: 8px;
}

.view-student-btn {
  border: none;
  background: none;
  color: #07C160;
  font-size: 14px;
  padding: 4px 8px;
  line-height: 1.2;
  margin: 0;
  min-height: 0;
}

.ai-score {
  font-size: 12px;
  margin-top: 4px;
}

.add-student-container {
  margin-top: 20px;
  text-align: center;
}

.add-student-btn {
  width: 100%;
  background-color: #07C160;
  color: white;
  border: none;
  padding: 10px 0;
  border-radius: 8px;
}

/* 添加加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
  width: 100%;
}

.loading-text {
  color: #999;
  font-size: 14px;
}

/* 加载更多样式 */
.loading-more {
  text-align: center;
  padding: 10px 0;
}

/* 没有更多数据样式 */
.no-more-data {
  text-align: center;
  padding: 15px 0;
}

.no-more-text {
  color: #999;
  font-size: 12px;
}

/* 没有数据样式 */
.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px 0;
  width: 100%;
}

.no-data-text {
  color: #999;
  font-size: 14px;
}

/* 统计卡片容器 */
.stat-cards-content {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

/* 确保学员卡片内部布局合理 */
.student-card {
  padding: 12px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 确保学员信息区域可以自适应收缩 */
.student-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
  margin-right: 8px;
}

/* 添加学员按钮样式 */
.add-btn {
  display: flex;
  align-items: center;
  color: #07C160;
  font-size: 14px;
  cursor: pointer;
}

.add-icon {
  margin-right: 4px;
  font-size: 16px;
  font-weight: bold;
}

/* 确保容器填充整个屏幕高度 */
.container-with-tabs {
  display: flex;
  flex-direction: column;
  height: calc(100vh - var(--status-bar-height) - 44px);
  position: relative;
  padding-bottom: 50px; /* 底部导航栏高度 */
}

/* 学员滚动视图样式 */
.student-scroll-view {
  flex: 1;
  width: 100%;
}

/* 搜索容器样式 */
.search-container {
  display: flex;
  padding: 10px 15px;
  background-color: white;
  border-bottom: 1px solid #eee;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  flex: 0.7; /* 输入框占据80%宽度 */
  height: 36px;
  border: 1px solid #ddd;
  border-radius: 18px;
  padding: 0 15px;
  font-size: 14px;
  background-color: #f5f5f5;
  box-sizing: border-box;
  margin-right: 10px; /* 添加右边距 */
}

.search-button {
  flex: 0.3; /* 按钮占据20%宽度 */
  height: 36px;
  line-height: 36px;
  padding: 0;
  font-size: 14px;
  background-color: #07c160;
  color: white;
  border-radius: 18px;
  text-align: center;
  box-sizing: border-box;
} 

.student-actions{
  background-color: #07C160;
  border-radius: 18px;
  color: white;
  font-size: 12px;
  padding: 10px 4px;
}
.action-btn{
  width: 100%;
  border-radius: 18px;
  text-align: center;
}