/* 导入公共样式 */
@import "../../styles/app.wxss";

/* 页面特定样式 */
.header {
  display: flex;
  align-items: center;
  height: 80px;
  background-color: white;
  border-bottom: 1px solid #eee;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-sizing: border-box;
  padding-top: 100px;
}

.back-button {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  position: relative;
  z-index: 101;
}

.back-icon {
  font-size: 20px;
  color: #333;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  color: black;
}

.header-right {
  width: 44px;
}

.container {
  padding-top: 120px;
  padding-bottom: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
  margin-top: 0;
}

/* 学员信息卡片 */
.student-card {
  margin: 12px;
  margin-top: -30px;
  padding: 16px;
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: calc(100% - 24px);
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.student-info-header {
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 12px;
}

.avatar {
  width: 56px;
  height: 56px;
  border-radius: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  font-weight: bold;
  background-color: #e8f5e9;
  color: #4caf50;
}

.student-basic-info {
  display: flex;
  flex-direction: column;
}

.student-name-container {
  display: flex;
  align-items: center;
  margin-bottom: 6px;
  position: relative;
}

.student-name {
  font-size: 18px;
  font-weight: 600;
  margin-right: 8px;
}

.student-goal {
  font-size: 12px;
  color: #ffffff;
  background-color: #007AFF;
  padding: 2px 6px;
  border-radius: 4px;
}

/* 编辑按钮样式 */
.edit-icon {
  position: absolute;
  top: 16px;
  right: 16px;
  font-size: 14px;
  color: #007AFF;
  padding: 4px 8px;
  border-radius: 4px;
  background-color: rgba(0, 122, 255, 0.1);
  z-index: 11;
}

/* 可编辑字段样式 */
.editable-field {
  display: flex;
  align-items: center;
  margin-top: 4px;
  line-height: 1.2;
}

.field-label {
  font-size: 14px;
  color: #666666;
  margin-right: 6px;
}

.edit-value {
  font-size: 14px;
  color: #007AFF;
  border-bottom: 1px dashed #007AFF;
  padding-bottom: 2px;
}

.height-input-container {
  display: flex;
  align-items: center;
}

.height-input {
  width: 50px;
  font-size: 14px;
  color: #007AFF;
  border-bottom: 1px solid #007AFF;
  text-align: center;
  padding: 0 4px;
}

.unit {
  font-size: 14px;
  color: #666666;
  margin-left: 2px;
}

.student-details {
  font-size: 14px;
  color: #666666;
  margin-top: 2px;
  line-height: 1.2;
}

.student-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 32px;
  padding: 0 12px;
  border-radius: 16px;
  font-size: 12px;
  line-height: 1;
  margin: 0;
  box-sizing: border-box;
}

.message-button {
  background-color: #1890ff;
  color: white;
}

.call-button {
  background-color: #f5f5f5;
  color: #666;
}

.button-icon {
  margin-right: 4px;
}

.next-session {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.next-session-label {
  font-size: 10px;
  color: #999;
}

.next-session-date {
  font-size: 12px;
  font-weight: 500;
}

/* 数据卡片通用样式 */
.data-card {
  margin: 12px;
  padding: 16px;
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: calc(100% - 24px);
  box-sizing: border-box;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.card-title {
  font-size: 15px;
  font-weight: 500;
}

.weight-change {
  font-size: 12px;
  color: #52c41a;
}

.chart-container {
  height: 160px;
  width: 100%;
  box-sizing: border-box;
}

.weight-chart {
  width: 100%;
  height: 100%;
}

/* 关键数据样式 */
.key-metrics {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
  width: 100%;
  box-sizing: border-box;
}

.metric-item {
  flex: 1;
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 12px 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 4px;
  box-sizing: border-box;
}

.metric-item:first-child {
  margin-left: 0;
}

.metric-item:last-child {
  margin-right: 0;
}

.metric-label {
  font-size: 12px;
  color: #666;
  margin-bottom: 4px;
}

.metric-value {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 4px;
}

.metric-change {
  font-size: 11px;
  color: #52c41a;
}

/* 身体围度数据样式 */
.unit-label {
  font-size: 12px;
  color: #999;
}

.measurements-list {
  margin-top: 8px;
  width: 100%;
  box-sizing: border-box;
}

.measurement-item {
  display: flex;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.measurement-item:last-child {
  border-bottom: none;
}

.measurement-label {
  font-size: 14px;
  font-weight: 500;
}

.measurement-data {
  display: flex;
  align-items: center;
}

.measurement-value {
  font-size: 14px;
  font-weight: 500;
  margin-right: 8px;
}

.measurement-change {
  font-size: 12px;
}

.change-positive {
  color: #52c41a;
}

.change-negative {
  color: #f5222d;
}

/* 添加页面标题样式 */
.page-title-container {
  background-color: #07C160;
  padding: 15px 20px;
  padding-top: calc(44px + var(--status-bar-height));
  color: black;
  box-sizing: border-box;
  width: 100%;
}

.page-title {
  font-size: 20px;
  font-weight: bold;
} 