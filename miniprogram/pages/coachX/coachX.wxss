/* 导入公共样式 */
@import "../../styles/app.wxss";

/* 页面特定样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.card-title {
  font-size: 16px;
  font-weight: bold;
}

.stat-row {
  display: flex;
  text-align: center;
  justify-content: space-around;
  margin-bottom: 12px;
}

.stat-item {
  text-align: center;
}

/* 添加加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
  width: 100%;
}

.loading-text {
  color: #999;
  font-size: 14px;
}

/* 优秀学员样式 */
.excellent-student {
  border-left: 4px solid #52c41a;
}

.excellent-avatar {
  background-color: #f6ffed;
  color: #52c41a;
}

.excellent-status {
  color: #52c41a;
}

.excellent-button {
  background-color: #52c41a;
  color: white;
  border-radius: 16px;
  padding: 4px 10px;
  font-size: 12px;
  line-height: 1.2;
  border: none;
}

.excellent-button .button-icon {
  color: white;
}
