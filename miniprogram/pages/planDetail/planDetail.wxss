/* 导入公共样式 */
@import "../../styles/app.wxss";

/* 计划详情页面特定样式 */
.back-button {
  position: absolute;
  left: 16px;
  font-size: 20px;
  font-weight: bold;
  cursor: pointer;
}

.content-wrapper {
  padding: 16px;
  padding-bottom: 80px;
}

.student-header {
  margin-bottom: 16px;
  display: flex;
  align-items: center;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background-color: #e6f7ff;
  color: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  margin-right: 12px;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 4px;
}

.student-tags {
  display: flex;
  gap: 8px;
}

.ai-insight {
  margin-bottom: 20px;
  background: white;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.ai-insight-container {
  display: flex;
  align-items: flex-start;
}

.ai-insight-icon {
  margin-right: 12px;
  font-size: 24px;
}

.ai-insight-content {
  flex: 1;
}

.ai-insight-title {
  font-weight: bold;
  margin-bottom: 8px;
}

.ai-insight-text {
  font-size: 14px;
}

.ai-suggestions {
  margin-top: 8px;
  margin-bottom: 8px;
}

.ai-suggestion-item {
  margin-bottom: 4px;
  padding-left: 8px;
}

.ai-analysis-source {
  font-size: 12px;
  color: #666;
  margin-top: 8px;
}

.plan-day {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.day-title {
  display: flex;
  justify-content: space-between;
  font-weight: bold;
  margin-bottom: 12px;
  font-size: 16px;
}

.day-menu {
  font-size: 20px;
}

.workout-item {
  padding: 12px;
  border-radius: 8px;
  background-color: #f9f9f9;
  margin-bottom: 8px;
  border-left: 3px solid transparent;
}

.highlight-green {
  border-left: 3px solid #4CAF50;
}

.highlight-orange {
  border-left: 3px solid #FF9800;
}

.highlight-red {
  border-left: 3px solid #F44336;
}

.workout-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
}

.workout-target {
  font-size: 12px;
  color: #666;
}

.diet-section {
  margin-top: 16px;
}

.diet-title {
  font-weight: bold;
  margin-bottom: 4px;
}

.diet-content {
  font-size: 14px;
}

.action-buttons {
  display: flex;
  gap: 12px;
  margin-top: 16px;
  margin-bottom: 8px;
}

.button {
  flex: 1;
  padding: 10px 0;
  border-radius: 8px;
  text-align: center;
  font-size: 14px;
}

.button-outline {
  background-color: white;
  border: 1px solid #ddd;
  color: #333;
}

.button-primary {
  background-color: #07C160;
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-icon {
  margin-right: 4px;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
  width: 100%;
}

.loading-text {
  color: #999;
  font-size: 14px;
}

/* 身体状态栏样式 - 更紧凑的版本 */
.body-stats {
  display: flex;
  justify-content: space-between;
  background: white;
  border-radius: 10px;
  padding: 12px 10px;
  margin-bottom: 16px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 0 4px;
}

.stat-item:not(:last-child) {
  border-right: 1px solid #eee;
}

.stat-value {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 2px;
}

.stat-label {
  font-size: 11px;
  color: #666;
}

.increase {
  color: #4CAF50;
}

.decrease {
  color: #F44336;
}

/* 修改容器样式，确保内容填充整个可用空间 */
.container-with-tabs {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - var(--status-bar-height) - 44px);
  position: relative;
  padding-bottom: 50px; /* 底部导航栏高度 */
}

/* 内置标签页样式 */
.plan-tabs {
  display: flex;
  background: white;
  border-radius: 10px;
  margin-bottom: 16px;
  overflow: hidden;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
}

.plan-tab {
  flex: 1;
  text-align: center;
  padding: 12px 0;
  font-size: 14px;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.plan-tab.active {
  color: #07C160;
  font-weight: bold;
}

.plan-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 3px;
  background-color: #07C160;
  border-radius: 3px 3px 0 0;
}

/* 饮食计划样式 */
.diet-overview {
  display: flex;
  justify-content: space-between;
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 16px;
}

.diet-macro {
  text-align: center;
  flex: 1;
}

.diet-macro-value {
  font-weight: bold;
  font-size: 16px;
  margin-bottom: 4px;
}

.diet-macro-label {
  font-size: 12px;
  color: #666;
}

.meal-section {
  margin-bottom: 16px;
  padding-bottom: 16px;
  border-bottom: 1px solid #eee;
}

.meal-section:last-child {
  border-bottom: none;
}

.meal-title {
  font-weight: bold;
  font-size: 16px;
}

.meal-time {
  font-size: 12px;
  color: #666;
  margin-bottom: 8px;
}

.meal-item {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
}

.meal-item-name {
  flex: 1;
}

.meal-item-amount {
  color: #666;
}

.diet-notes {
  margin-top: 16px;
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 12px;
}

.diet-notes-title {
  font-weight: bold;
  margin-bottom: 8px;
}

.diet-notes-content {
  font-size: 14px;
  color: #666;
}

/* 补剂建议样式 */
.supplement-item {
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 12px;
}

.supplement-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.supplement-name {
  font-weight: bold;
}

.supplement-dosage {
  color: #07C160;
}

.supplement-timing, .supplement-purpose {
  font-size: 13px;
  color: #666;
  margin-bottom: 4px;
}

.supplement-notes {
  margin-top: 16px;
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 12px;
}

.supplement-notes-title {
  font-weight: bold;
  margin-bottom: 8px;
}

.supplement-notes-content {
  font-size: 14px;
  color: #666;
}

/* 编辑按钮样式 */
.item-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
  margin-top: 8px;
  font-size: 12px;
}

.edit-btn {
  color: #07C160;
}

.delete-btn {
  color: #F44336;
}

.day-actions, .meal-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.day-action-btn, .meal-action-btn {
  font-size: 14px;
  color: #07C160;
}

.add-meal-btn {
  text-align: center;
  padding: 12px;
  color: #07C160;
  font-size: 14px;
  background-color: #f9f9f9;
  border-radius: 8px;
  margin-top: 16px;
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.diet-notes-header, .supplement-notes-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
} 