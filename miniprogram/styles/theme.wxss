/* 主题颜色 */
.primary-color {
  color: #07c160;
}

.primary-bg {
  background-color: #07c160;
}

.warning-color {
  color: #f44336;
}

.warning-bg {
  background-color: #ffebee;
}

.info-color {
  color: #2196f3;
}

.info-bg {
  background-color: #e3f2fd;
}

/* AI相关样式 */
.ai-generated {
  font-size: 12px;
  color: #999;
  display: flex;
  align-items: center;
}

.ai-icon {
  margin-right: 4px;
}

.ai-last-analysis {
  font-size: 12px;
  margin-top: 8px;
}

.ai-suggestion {
  padding: 12px;
  background: #f9f9f9;
  border-radius: 8px;
  font-size: 14px;
}

.ai-suggestion-title {
  font-weight: bold;
  margin-bottom: 4px;
  display: flex;
  align-items: center;
}

.ai-suggestion-icon {
  margin-right: 6px;
} 