/* 学员卡片样式 */
.student-card {
  display: flex;
  align-items: center;
  padding: 12px;
  margin: 0 12px 8px 12px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  width: calc(100% - 24px);
  box-sizing: border-box;
}

.warning-student {
  border-left: 3px solid #f44336;
}

.info-student {
  border-left: 3px solid #2196f3;
}

.warning-avatar {
  background: #ffebee;
  color: #f44336;
}

.info-avatar {
  background: #e3f2fd;
  color: #2196f3;
}

.student-info {
  flex: 0.7;
  width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.student-name {
  font-weight: bold;
  margin-bottom: 4px;
}

.student-status {
  font-size: 12px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.warning-status {
  color: #f44336;
}

.info-status {
  color: #2196f3;
}

.student-card > view:last-child {
  flex: 0.3;
  width: 30%;
  display: flex;
  justify-content: flex-end;
}

/* 按钮样式 */
.ai-action-button {
  background: #f44336;
  color: white;
  border: none;
  padding: 4px 12px;
  border-radius: 6px;
  font-size: 12px;
  display: flex;
  align-items: center;
  line-height: normal;
  min-width: 60px;
  justify-content: center;
}

.info-button {
  background: #2196f3;
}

.button-icon {
  margin-right: 4px;
}

/* 统计数字样式 */
.stat-number {
  font-size: 24px;
  font-weight: bold;
}

.stat-completed {
  color: #07c160;
}

.stat-warning {
  color: #ff9800;
}

.stat-info {
  color: #2196f3;
}

.stat-label {
  font-size: 12px;
  color: #666;
} 